<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="APUToki.Views.LectureDetailPage" 
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Subject Name:" 
               FontSize="Medium" />
        <Label Text="{Binding LectureItem.SubjectNameEN}" 
               FontSize="Large" XAlign="Center"/>
        <Label Text="Instructor" FontSize="Medium"/>
        <Label Text="{Binding LectureItem.InstructorEN}"
               FontSize="Medium" Grid.Row="0" Grid.Column="0"/>
        <Label Text="{Binding LectureItem.Period}"
               FontSize="Medium"/>
    </StackLayout>
</ContentPage>