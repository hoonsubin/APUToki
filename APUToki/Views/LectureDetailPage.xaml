<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="APUToki.Views.LectureDetailPage" 
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <!--Page Level Resources: Compatibile with Xamarin Live Player-->
            <Color x:Key="Primary">#ab003e</Color>
            <Color x:Key="Accent">#8f8f8f</Color>
            <Color x:Key="LightTextColor">#999999</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding LectureItem.SubjectNameEN}" 
               FontSize="Large" XAlign="Center"/>
        <Label Text="Instructor" FontSize="Medium"/>
        <Label Text="{Binding LectureItem.InstructorEN}"
               FontSize="Medium"/>
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="{Binding LectureItem.Period}" />
                        <Span Text=" " />
                        <Span Text="{Binding LectureItem.DayOfWeek}" />
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Classroom:" />
                        <Span Text=" " />
                        <Span Text="{Binding LectureItem.Classroom}" />
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Building:" />
                        <Span Text=" " />
                        <Span Text="{Binding LectureItem.BuildingFloor}" />
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        
        <Label Text="{Binding LectureItem.Curriculum}" FontSize="Small"/>
        
        <Button Margin="0,10,0,0" 
                Text="Open Course Syllabus" 
                Command="{Binding OpenWebCommand}" 
                BackgroundColor="{StaticResource Primary}" 
                TextColor="White" />
        
    </StackLayout>
</ContentPage>